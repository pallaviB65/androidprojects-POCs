<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/add_main_container">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp" />

    <LinearLayout
        android:id="@+id/add_name_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="Event Name"
            android:lines="1"
            android:textSize="10pt"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="7dp"
        android:src="@color/contentDividerLine" />

    <LinearLayout
        android:id="@+id/add_date_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/add_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123"
            android:textSize="10pt" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add_toggle_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp">


        <ToggleButton
            android:visibility="gone"
            android:id="@+id/add_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>



    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_category_container"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <Spinner
            android:visibility="gone"
            android:id="@+id/add_spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/add_text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="10pt"
            android:layout_margin="8dp"/>
    </RelativeLayout>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginBottom="6dp"-->
        <!--android:layout_marginTop="7dp"-->
        <!--android:src="@color/contentDividerLine" />-->

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/add_background_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="background"
            android:textSize="10pt"/>

            <ImageView
                android:id="@+id/add_background"
                android:layout_width="60dp"
                android:layout_height="30dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>
