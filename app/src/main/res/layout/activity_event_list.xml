<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EventListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentView"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/contentView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cornerborders"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btnPin"
                android:layout_alignRight="@+id/contentView"
                android:layout_marginRight="5dp"
                android:text="Pin"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                tools:ignore="NotSibling" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Android training"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Details of training"
                android:textSize="18sp"
                android:id="@+id/description"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/title"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>